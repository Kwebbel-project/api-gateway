{
  "Routes": [
    // User API
    {
      "DownstreamPathTemplate": "/api/user",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],

      "UpstreamPathTemplate": "/user-service/user",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ]

    },
    {
      "DownstreamPathTemplate": "/api/user/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],

      "UpstreamPathTemplate": "/user-service/user/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ]
    },
    // User API auth
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],

      "UpstreamPathTemplate": "/user-service/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ]

    },
    // Tweet API
    {
      "DownstreamPathTemplate": "/api/tweet",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/tweet-service/tweet",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ]
    },
    {
      "DownstreamPathTemplate": "/api/tweet/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],

      "UpstreamPathTemplate": "/tweet-service/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}